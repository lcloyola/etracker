%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %title Forms
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %meta{:content => "", :name => "description"}
          %meta{:content => "", :name => "author"}
            / Le styles
            = stylesheet_link_tag    "application", :media => "all"
            = javascript_include_tag "application"
            = csrf_meta_tags
            :css
              body {
                padding-top: 60px;
                padding-bottom: 40px;
              }
              .sidebar-nav {
                padding: 9px 0;
              }
                / HTML5 shim, for IE6-8 support of HTML5 elements
            /[if lt IE 9]
              <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            / Fav and touch icons
            %link{:href => "../assets/ico/favicon.ico", :rel => "shortcut icon"}
            %link{:href => "../assets/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}
            %link{:href => "../assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}
            %link{:href => "../assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}
            %link{:href => "../assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"} Forms
          .nav-collapse.collapse
            - if current_user.present?
              %p.navbar-text.pull-right
                Logged in as
                %a.navbar-link= current_user.email
                %button.btn.btn-small= link_to 'Logout', destroy_user_session_path, :method => :delete
            %ul.nav
              %li
                %a{:href => "/"} Home
              - unless current_user.present?
                %li
                  %a{:href => "/users/sign_in"} User Login
              - else
                %li= link_to "Items", items_path
                %li= link_to "Locatons", locations_path
          / /.nav-collapse
    .container-fluid
      .row-fluid
        .span3
          = render "partials/sidebar"
        / /span
        .span9
          / /= render "partials/breadcrumb" if @breadcrumb.present?
          = yield
      / /span
    / /row
    %hr
      %footer
        %p Â© Company 2012

